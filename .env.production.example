# =====================================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# =====================================================
# IMPORTANT: This is a template for production deployment
# Copy this file to .env.production and fill in the actual values
# NEVER commit .env.production to version control

# =====================================================
# Houjin Bangou API (法人番号システムWeb-API)
# =====================================================
KEI_CORPORATE_API_ID=your_api_key_here

# =====================================================
# Supabase Configuration
# =====================================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# =====================================================
# SMTP Configuration (XServer)
# =====================================================
XSERVER_SMTP_HOST=sv12515.xserver.jp
XSERVER_SMTP_PORT=587
XSERVER_SMTP_USER=info@package-lab.com
# IMPORTANT: Use secret management service for password
XSERVER_SMTP_PASSWORD=your-smtp-password-here

# =====================================================
# Email Configuration
# =====================================================
ADMIN_EMAIL=admin@package-lab.com
FROM_EMAIL=info@package-lab.com

# =====================================================
# Supabase SMTP Configuration
# =====================================================
SUPABASE_SMTP_HOST=sv12515.xserver.jp
SUPABASE_SMTP_PORT=587
SUPABASE_SMTP_USER=info@package-lab.com
SUPABASE_SMTP_PASSWORD=your-smtp-password-here
SUPABASE_SENDER_NAME=Epackage Lab
SUPABASE_SENDER_EMAIL=info@package-lab.com

# =====================================================
# Production Settings
# =====================================================
NODE_ENV=production
NEXT_PUBLIC_SITE_URL=https://package-lab.com

# =====================================================
# SECURITY CRITICAL: Development Mode MUST be disabled
# =====================================================
NEXT_PUBLIC_DEV_MODE=false
ENABLE_DEV_MOCK_AUTH=false

# =====================================================
# Rate Limiting
# =====================================================
DISABLE_RATE_LIMIT=false

# =====================================================
# NextAuth Configuration
# =====================================================
NEXTAUTH_SECRET=generate-with-openssl-rand-base64-32
NEXTAUTH_URL=https://package-lab.com

# =====================================================
# Cron Job Secret
# =====================================================
CRON_SECRET=generate-secure-random-string

# =====================================================
# Google Drive Integration
# =====================================================
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
NEXT_PUBLIC_GOOGLE_REDIRECT_URI=https://package-lab.com
GOOGLE_DRIVE_UPLOAD_FOLDER_ID=your-drive-folder-id
GOOGLE_DRIVE_CORRECTION_FOLDER_ID=your-drive-folder-id
