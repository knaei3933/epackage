generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// =====================================================
// User & Authentication Models
// =====================================================

model User {
  id              String          @id @default(cuid())
  email           String          @unique
  emailVerified   DateTime?
  password        String?

  // Japanese name fields (姓・名 분리)
  kanjiLastName   String?         @db.VarChar(50)   // 漢字 - 姓
  kanjiFirstName  String?         @db.VarChar(50)   // 漢字 - 名
  kanaLastName    String?         @db.VarChar(50)   // ひらがな - 姓
  kanaFirstName   String?         @db.VarChar(50)   // ひらがな - 名

  // Phone numbers
  corporatePhone  String?         @db.VarChar(20)
  personalPhone   String?         @db.VarChar(20)

  // Business type
  businessType    BusinessType?

  // Company information
  companyName     String?         @db.VarChar(200)
  legalEntityNumber String?       @db.VarChar(15)
  position        String?         @db.VarChar(100)
  department      String?         @db.VarChar(100)
  companyUrl      String?         @db.VarChar(255)

  // Product category
  productCategory ProductCategory?
  acquisitionChannel String?      @db.VarChar(100)

  // Address
  postalCode      String?         @db.VarChar(10)
  prefecture      String?         @db.VarChar(50)
  city            String?         @db.VarChar(100)
  street          String?         @db.VarChar(200)

  role            UserRole        @default(MEMBER)
  status          UserStatus      @default(PENDING)

  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  lastLoginAt     DateTime?

  accounts       Account[]
  sessions       Session[]
  quotations            Quotation[]
  screenshotRequests    ScreenshotRequest[]
  sampleRequests        SampleRequest[]
  contactSubmissions    ContactSubmission[]
}

enum BusinessType {
  INDIVIDUAL    // 개인
  CORPORATION   // 법인
}

enum ProductCategory {
  COSMETICS     // 화장품
  CLOTHING      // 의류
  ELECTRONICS   // 가전제품
  KITCHEN       // 주방용품
  FURNITURE     // 가구
  OTHER         // 기타
}

enum UserRole {
  ADMIN         // 관리자
  MEMBER        // 일반 회원
}

enum UserStatus {
  PENDING       // 승인 대기
  ACTIVE        // 활성
  SUSPENDED     // 정지
  DELETED       // 삭제
}

// =====================================================
// Quotation Models
// =====================================================

model Quotation {
  id              String          @id @default(cuid())
  userId          String
  user            User            @relation(fields: [userId], references: [id], onDelete: Cascade)

  projectName     String          @db.VarChar(200)
  productCategory ProductCategory
  quantity        Int
  unitPrice       Int             @default(0)
  totalPrice      Int             @default(0)
  tax             Int             @default(0)
  grandTotal      Int             @default(0)

  status          QuotationStatus @default(DRAFT)
  validUntil      DateTime?

  notes           String?         @db.Text

  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt

  pdfUrl          String?         @db.VarChar(500)

  @@index([userId])
  @@index([status])
}

enum QuotationStatus {
  DRAFT         // 작성 중
  SENT          // 발송됨
  APPROVED      // 승인됨
  REJECTED      // 거절됨
  EXPIRED       // 만료됨
}

// =====================================================
// Screenshot Request Models
// =====================================================

model ScreenshotRequest {
  id              String          @id @default(cuid())
  userId          String
  user            User            @relation(fields: [userId], references: [id], onDelete: Cascade)

  title           String          @db.VarChar(200)
  description     String?         @db.Text

  referenceUrls   String[]
  screenshots     Screenshot[]

  status          RequestStatus   @default(PENDING)
  priority        Priority        @default(NORMAL)

  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt

  completedAt     DateTime?

  @@index([userId])
  @@index([status])
}

model Screenshot {
  id              String              @id @default(cuid())
  requestId       String?
  request         ScreenshotRequest?  @relation(fields: [requestId], references: [id], onDelete: Cascade)

  originalUrl     String              @db.VarChar(1000)
  imagePath       String              @db.VarChar(500)
  thumbnailPath   String?             @db.VarChar(500)

  width           Int?
  height          Int?
  format          String?             @db.VarChar(10)

  createdAt       DateTime            @default(now())

  @@index([requestId])
}

enum RequestStatus {
  PENDING       // 대기 중
  IN_PROGRESS   // 진행 중
  COMPLETED     // 완료
  CANCELLED     // 취소
}

enum Priority {
  LOW           // 낮음
  NORMAL        // 보통
  HIGH          // 높음
  URGENT        // 긴급
}

// =====================================================
// Sample Request Models
// =====================================================

model SampleRequest {
  id              String          @id @default(cuid())
  userId          String?
  user            User?           @relation(fields: [userId], references: [id], onDelete: SetNull)

  // Japanese name fields (for non-members) - 姓・名 분리
  kanjiLastName   String?         @db.VarChar(50)
  kanjiFirstName  String?         @db.VarChar(50)
  kanaLastName    String?         @db.VarChar(50)
  kanaFirstName   String?         @db.VarChar(50)

  // Contact information
  email           String          @db.VarChar(255)
  phone           String          @db.VarChar(20)

  // Sample details
  samples         Json            // Array of sample selections
  projectDetails  String?         @db.Text

  status          RequestStatus   @default(PENDING)

  consent         Boolean         @default(false) // Privacy consent

  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt

  @@index([userId])
  @@index([email])
  @@index([status])
}

// =====================================================
// Contact Submission Models
// =====================================================

model ContactSubmission {
  id              String          @id @default(cuid())
  userId          String?
  user            User?           @relation(fields: [userId], references: [id], onDelete: SetNull)

  // Contact information
  name            String          @db.VarChar(100)
  email           String          @db.VarChar(255)
  phone           String?         @db.VarChar(20)

  // Inquiry details
  inquiryType     String          @db.VarChar(50)
  urgency         String          @default("normal") @db.VarChar(20)

  subject         String          @db.VarChar(200)
  message         String          @db.Text

  status          ContactStatus   @default(PENDING)

  createdAt       DateTime        @default(now())

  @@index([userId])
  @@index([email])
  @@index([status])
}

enum ContactStatus {
  PENDING       // 대기 중
  IN_PROGRESS   // 진행 중
  RESOLVED      // 해결됨
  CLOSED        // 닫힘
}

// =====================================================
// NextAuth.js Models
// =====================================================

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}
