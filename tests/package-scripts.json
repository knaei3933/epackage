/**
 * Package.json Scripts for E2E Testing
 *
 * Add these scripts to your package.json "scripts" section
 */

const e2eScripts = {
  // E2E Test Scripts
  "test:e2e": "playwright test",
  "test:e2e:ui": "playwright test --ui",
  "test:e2e:headed": "playwright test --headed",
  "test:e2e:debug": "playwright test --debug",

  // Run specific tests
  "test:e2e:quote": "playwright test quotation-order-workflow.spec.ts",
  "test:e2e:auth": "playwright test --grep "Authentication"",
  "test:e2e:workflow": "playwright test --grep "complete workflow"",

  // Run on specific browsers
  "test:e2e:chrome": "playwright test --project=chromium",
  "test:e2e:firefox": "playwright test --project=firefox",
  "test:e2e:safari": "playwright test --project=webkit",
  "test:e2e:mobile": "playwright test --project="Mobile Chrome"",

  // Generate reports
  "test:e2e:report": "playwright show-report",
  "test:e2e:report:html": "playwright test --reporter=html",
  "test:e2e:report:junit": "playwright test --reporter=junit",

  // Playwright installation
  "playwright:install": "playwright install",
  "playwright:install:chrome": "playwright install chromium",
  "playwright:install:all": "playwright install --with-deps",

  // Test helpers
  "test:e2e:record": "playwright codegen http://localhost:3000",
  "test:e2e:trace": "playwright show-trace test-results/artifacts",

  // Cleanup
  "test:e2e:clean": "rimraf test-results",
  "test:e2e:clean:cache": "playwright cache --clear",

  // Combined scripts
  "test:e2e:ci": "playwright test --reporter=html --reporter=json",
  "test:e2e:all": "npm run test:e2e && npm run test:e2e:report"
};

